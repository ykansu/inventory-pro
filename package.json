{
  "name": "inventory-pro",
  "productName": "Inventory Pro",
  "version": "0.1.0",
  "description": "A comprehensive stock management application built with Electron.js and React",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "prepackage": "node scripts/setup-env.js",
    "package": "electron-builder build --win --publish never",
    "package-portable": "cross-env NODE_ENV=production npm run build:prod && npm run rebuild && npm run package",
    "premake": "node scripts/setup-env.js",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build": "webpack --config webpack.config.js",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "dev": "concurrently -k \"cross-env NODE_ENV=development webpack serve --config webpack.config.js\" \"cross-env NODE_ENV=development electron-forge start\"",
    "rebuild": "electron-rebuild",
    "predist": "npm run build:prod && npm run rebuild",
    "dist": "electron-forge make",
    "migrate": "knex migrate:latest --knexfile src/database/knexfile.js",
    "migrate:make": "knex migrate:make --knexfile src/database/knexfile.js",
    "migrate:run": "node src/database/run-migrations.js",
    "seed": "knex seed:run --knexfile src/database/knexfile.js",
    "seed:make": "knex seed:make --knexfile src/database/knexfile.js",
    "stress-test": "node src/database/run-stress-test.js",
    "perf-test": "node src/test/performance-test.js",
    "postpackage": "node scripts/copy-env-to-dist.js"
  },
  "keywords": [
    "electron",
    "react",
    "inventory",
    "stock management",
    "pos"
  ],
  "author": {
    "name": "Yasin KANSU",
    "email": "yasinkansu3@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "chart.js": "^4.4.8",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.2.0",
    "exceljs": "^4.4.0",
    "i18next": "^24.2.3",
    "knex": "^3.1.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.4.1",
    "react-router-dom": "^7.4.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^3.7.1",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "35.1.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1"
  }
}
